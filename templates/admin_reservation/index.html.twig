{% extends 'baseAdmin.html.twig' %}



{% block body %}
    <h1>Liste des réservations</h1>

    <table >
        <thead>
            <tr>
                
                <th>Nom du client</th>
                <th>Service réservé</th>
                <th>Date réservation</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
                <tr>

                    <td>{{ reservation.user.firstName }} {{ reservation.user.lastName }}</td>
                    <td>{{ reservation.service.title }}</td>
                    <td>{{ reservation.reservationDate|date('d/m/Y H:i') }}</td>
                    <td>
                        {% if reservation.status == '300' %}
                            <span class="badge bg-danger">Annulée</span>
                        {% elseif reservation.status == '200' %}
                            <span class="badge bg-success">Acceptée</span>
                        {% elseif reservation.status == '100' %}
                            <span class="badge bg-warning">En attente</span>
                        {% else %}
                            {{ reservation.status }}
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('admin_reservation_show', {id: reservation.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('admin_reservation_edit', {id: reservation.id}) }}" class="btn btn-primary btn-sm">Éditer</a>


                     
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucune réservation trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
